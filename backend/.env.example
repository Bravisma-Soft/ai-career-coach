# =================================
# APPLICATION CONFIGURATION
# =================================
NODE_ENV=development
PORT=3000
API_VERSION=v1

# =================================
# DATABASE CONFIGURATION
# =================================
DATABASE_URL="postgresql://username:password@localhost:5432/ai_career_coach?schema=public"

# =================================
# REDIS CONFIGURATION
# =================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TLS=false

# =================================
# JWT CONFIGURATION
# =================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-token-key-change-this-in-production

# Access token expiration (production: 24h, development: 15m for testing)
# If users are getting "Access token expired" errors, increase this value
JWT_EXPIRES_IN=24h

# Refresh token expiration (how long until user must re-login)
JWT_REFRESH_EXPIRES_IN=7d

# =================================
# ANTHROPIC AI / CLAUDE CONFIGURATION
# =================================
ANTHROPIC_API_KEY=your-anthropic-api-key
CLAUDE_MODEL=claude-sonnet-4-5-20250929
CLAUDE_MAX_TOKENS=4096
CLAUDE_TEMPERATURE=1.0

# =================================
# AWS S3 CONFIGURATION (for file uploads)
# =================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET_NAME=ai-career-coach-uploads
AWS_S3_ENDPOINT=

# =================================
# EMAIL CONFIGURATION (Optional)
# =================================
# SMTP (Legacy - not recommended)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM=noreply@aicareercoach.com

# SendGrid (Recommended)
# Get your API key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@aicareercoach.com
SENDGRID_FROM_NAME=AI Career Coach

# Frontend URL (for email links like password reset)
FRONTEND_URL=http://localhost:5173

# =================================
# RATE LIMITING
# =================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX=5

# =================================
# CORS CONFIGURATION
# =================================
CORS_ORIGIN=http://localhost:3001,http://localhost:5173
CORS_CREDENTIALS=true

# =================================
# LOGGING CONFIGURATION
# =================================
LOG_LEVEL=info
LOG_FORMAT=json

# =================================
# BULLMQ/QUEUE CONFIGURATION
# =================================
QUEUE_CONCURRENCY=5
QUEUE_MAX_RETRIES=3

# =================================
# SESSION CONFIGURATION
# =================================
SESSION_SECRET=your-session-secret-change-this-in-production
SESSION_MAX_AGE=86400000

# =================================
# FILE UPLOAD CONFIGURATION
# =================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.txt

# =================================
# SECURITY
# =================================
BCRYPT_ROUNDS=10
PASSWORD_MIN_LENGTH=8

# =================================
# FEATURE FLAGS
# =================================
ENABLE_SWAGGER=true
ENABLE_METRICS=true
ENABLE_EMAIL_VERIFICATION=false

# =================================
# EXTERNAL SERVICES (Optional)
# =================================
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
SENTRY_DSN=
